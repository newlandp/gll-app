<h1 class="page-header"><%= @goal.name %></h1>

<section id="forms">
    <div class="row">
        <div class="col-lg-8">
            <%= form_for([@user, @track]) do |f| %>
                <%= f.hidden_field(:goal_id, :value => @goal.id) %>
                <div class="row">
                    <div class="col-lg-12">
                        <p>
                          <%= f.submit class: "btn btn-primary" %>
                        </p>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>

<% if current_user_admin? %>
    <%= link_to "Edit #{@goal.name}", edit_goal_path %></br>
    
    <%= link_to "Delete #{@goal.name}", goal_path(@goal.id), method: :delete, data: { confirm: "Are you sure?" } %></br>
<% end %>

<%= link_to "Goals Index", goals_path %></br>

<%= link_to "Days for #{@goal.name}", goal_days_path(@goal.id) %>