<section id="forms">
    <div class="row">
        <div class="col-lg-8">
            <div class="form-horizontal well">
                <%= form_for([@goal, @day]) do |f| %>
                    <div class="row">
                        <div class="col-lg-5">
                            <p>
                              <%= f.label :name, { :class => "control-label" } %><br/>
                              <%= f.text_field :name, { :class => "form-control" } %>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2">
                            <p>
                              <%= f.label :number, { :class => "control-label" } %><br/>
                              <%= f.number_field :number, { :class => "form-control" } %>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                              <%= f.label :description, { :class => "control-label" } %><br/>
                              <%= f.text_area :description, { :class => "form-control" } %>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                              <%= f.submit class: "btn btn-primary" %>
                            </p>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>


